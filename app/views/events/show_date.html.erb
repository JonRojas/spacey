

<div class='right'>
  <a class='button <%="active" if params[:view]=="day" || params[:view] == nil %>' href='<%= show_date_path(@day.strftime("%F"), request.query_parameters.merge(view: 'day'))%>'>
    Day
  </a>
  <a class='button <%="active" if params[:view]=="week" %>' href='<%= show_date_path(@day.strftime("%F"), request.query_parameters.merge(view: 'week'))%>'>
    Week
  </a>
  <a class='button <%="active" if params[:view]=="month" %>' href='<%= show_date_path(@day.strftime("%F"), request.query_parameters.merge(view: 'month'))%>'>
    Month
  </a>
  <a class='button <%="active" if params[:view]=="agenda" %>' href='<%= show_date_path(@day.strftime("%F"), request.query_parameters.merge(view: 'agenda'))%>'>
    Agenda
  </a>
</div>

<% if params[:view] == "agenda" %>
  <%= render "agenda" %>
<% elsif params[:view] == "week" %>
  <%= render "week" %>
<% elsif params[:view] == "month" %>
  <%= render "month" %>
<% else %>
  <%= render "day" %>
<% end %>
