<h3>New Event</h3>
<%= form_for @event do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :space_id %>
  <%= f.select :space_id, Space.all.collect{|s| [s.title, s.id] } %>
  <br>
  <%= f.label :kind %>
  <% kinds = ["Immersive", "Part Time Course", "Info Session", "C&W", "Event", "Alumni", "Internal"]%>
  <%= f.select :kind, kinds.collect{|k| [k, k.gsub(/[^A-Za-z]/,'-').downcase] } %>
  <br>
  <%= f.label :start_date %>
  <input class='datetimepicker' name='event[start_date]'>
  <br>
  <%= f.label :end_date %>
  <input class='datetimepicker' name='event[end_date]'>

  <br>
  <a href='#' class='js-check-availability'>Check Availability</a>
  <br>
  <div class='js-is-not-available'>
    <%= f.submit%>
  </div>
<% end %>
